! vim: foldmethod=marker

! Plugins {{{1
! ============
URxvt.perl-ext-common: default,resize-font

! Preferences {{{1
! ================
! -----------------
! Disable scrollbar
! -----------------
URxvt.scrollBar: false
! ----------
! Set locale
! ----------
URxvt.imLocale: fr_FR.UTF-8
! ------------
! Choose font
! ------------
! Setting the font pixelsize to non-whole units may give better antialiasing results
/* URxvt.font: xft:Inconsolata for Powerline:style=BoldForPowerline:pixelsize=19 */
URxvt.font: xft:Inconsolata\\-g for Powerline:pixelsize=14.5:Bold
! -----------------------
! Font rendering settings
! -----------------------
! Best results seem to be achieved with hinting disabled; in any case, on XQuartz, varying hintstyle seem to have no effect
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: false
Xft.autohint: false
Xft.hintstyle: hintfull
Xft.rgba: rgb
Xft.lcdfilter: lcddefault
URxvt.letterSpace: 0
URxvt.lineSpace: 0

! UI {{{1
! =======
! -------
! Padding
! -------
URxvt.internalBorder: 5
! ---------------------
! Background/foreground
! ---------------------
URxvt.background: 0
URxvt.foreground: #888888
! ------
! Cursor
! ------
URxvt.cursorColor: #888888
! -----------------
! Color definitions
! -----------------
! black dark/light
*color0: #121212
*color8: #002b36
! red dark/light
*color1: #dc322f
*color9: #cb4b16
! green dark/light
*color2: #859900
*color10: #586e75
! yellow dark/light
*color3: #b58900
*color11: #657b83
! blue dark/light
*color4: #268bd2
*color12: #839496
! magenta dark/light
*color5: #d33682
*color13: #6c71c4
! cyan dark/light
*color6: #2aa198
*color14: #93a1a1
! white dark/light
*color7: #eee8d5
*color15: #fdf6e3

! Key bindings {{{1
! =================
! ------------------
! Resize-font plugin
! ------------------
URxvt.keysym.C-parenright: resize-font:smaller
URxvt.keysym.C-minus: resize-font:bigger
URxvt.keysym.C-equal: resize-font:reset
